* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body, html {
  font-family: 'Segoe UI', sans-serif;
  background-color: #f5f9ff;
  overflow-x: hidden;
}

.home-container {
  width: 100%;
}

/* Navbar */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
  background-color: #0047AB;
  color: white;
  flex-wrap: wrap;
}

.logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: bold;
  font-size: 1.4rem;
}

.logo img {
  width: 30px;
  height: 30px;
}

.nav-links a {
  margin: 0 1rem;
  color: white;
  text-decoration: none;
  font-weight: 500;
}

.auth-buttons button {
  margin-left: 0.5rem;
  padding: 0.4rem 1rem;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.auth-buttons .signup {
  background-color: white;
  color: #0047AB;
}

/* Hero Section */
.hero-section {
  display: flex;
  flex-direction: column;
  padding: 2rem;
  align-items: center;
  text-align: center;
}

.hero-left {
  max-width: 600px;
}

.hero-left h1 {
  font-size: 3rem;
  color: #1c1c1c;
}

.hero-left h1 span {
  color: #00b4d8;
}

.hero-left p {
  margin-top: 1rem;
  font-size: 1rem;
  color: #444;
}

.hero-buttons {
  margin-top: 2rem;
}

.try-btn,
.start-btn {
  padding: 0.6rem 1.2rem;
  font-size: 1rem;
  margin-right: 1rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.try-btn {
  background-color: #00b4d8;
  color: white;
}

.start-btn {
  background-color: #002855;
  color: white;
}

.hero-right {
  margin-top: 2rem;
}

.hero-right img {
  max-width: 100%;
  height: auto;
  border-radius: 10px;
}

/* Responsive */
@media (min-width: 768px) {
  .hero-section {
    flex-direction: row;
    justify-content: space-around;
    text-align: left;
  }

  .hero-left {
    flex: 1;
  }

  .hero-right {
    flex: 1;
    margin-top: 0;
    display: flex;
    justify-content: center;
  }
}