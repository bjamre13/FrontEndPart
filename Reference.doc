.button-group {
  display: flex;
  justify-content: flex-end;
  gap: 1rem;
}

.cancel-btn {
  background-color: white;
  color: #333;
  border: 1px solid #ccc;
  padding: 0.5rem 1rem;
  cursor: pointer;
}

.submit-btn {
  background-color: #0d6efd;
  color: white;
  padding: 0.5rem 1rem;
  border: none;
  cursor: pointer;
}