/* General reset and layout */
body, html {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Segoe UI', sans-serif;
  overflow-x: hidden;
  background-color: #f9f9f9;
}

.home-wrapper {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Navigation Bar */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #0047AB;
  padding: 0.8rem 2rem;
  color: white;
  flex-wrap: wrap;
}

.logo {
  font-size: 1.5rem;
  font-weight: bold;
}

.nav-links a {
  margin: 0 1rem;
  text-decoration: none;
  color: white;
}

.nav-buttons button {
  margin-left: 1rem;
  padding: 0.4rem 1rem;
  background-color: white;
  border: none;
  border-radius: 5px;
  color: #0047AB;
  font-weight: 600;
  cursor: pointer;
}

/* Hero Section */
.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 3rem 1rem;
  text-align: center;
}

.hero-text h1 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.hero-text span {
  color: #0047AB;
}

.hero-actions {
  margin-top: 1.5rem;
}

.hero-actions button {
  margin: 0 0.5rem;
  padding: 0.6rem 1.2rem;
  border: none;
  border-radius: 4px;
  font-weight: bold;
  cursor: pointer;
}

.get-started {
  background-color: #0047AB;
  color: white;
}

.learn-more {
  background-color: #fff;
  color: #0047AB;
  border: 1px solid #0047AB;
}

/* Mock Ticket Image */
.hero-image {
  margin-top: 2rem;
}

.mock-ticket {
  background-color: #e0e7ff;
  padding: 1.5rem;
  border-radius: 8px;
  width: 300px;
}

.ticket-bar {
  height: 12px;
  background-color: #375efc;
  margin: 10px 0;
  border-radius: 4px;
}

.ticket-bar.bar-1 { width: 80%; }
.ticket-bar.bar-2 { width: 65%; background-color: #4c8bf5; }
.ticket-bar.bar-3 { width: 90%; background-color: #6daaff; }

/* Footer */
.footer {
  text-align: center;
  padding: 2rem;
  background: #0047AB;
  color: white;
  margin-top: auto;
}

/* Responsive Adjustments */
@media (min-width: 768px) {
  .hero {
    flex-direction: row;
    justify-content: space-between;
    text-align: left;
    padding: 4rem 8%;
  }

  .hero-text {
    flex: 1;
  }

  .hero-image {
    flex: 1;
    display: flex;
    justify-content: center;
  }
}